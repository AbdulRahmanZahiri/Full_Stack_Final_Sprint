<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <title>Log In</title>
    <link rel="stylesheet" href="/styles.css" />
  </head>

  <body>
    <div class="main-content">
      <div class="landing-content">
        <div class="card-header">
          <img src="/shuriken.png" alt="shuriken" class="shuriken spin-left" />

          <h1>Log In</h1>
          <img src="/shuriken.png" alt="shuriken" class="shuriken spin-right" />
        </div>
        <form action="/login" method="post" style="width: 300px">
          <% if (errorMessage) { %>
          <p class="error-message"><%= errorMessage %></p>
          <% } %> <% if (typeof successMessage !== 'undefined' &&
          successMessage) { %>
          <div class="success-message"><%= successMessage %></div>
          <% } %>

          <div class="form-input-container">
            <label for="username">Username:</label>
            <input type="text" id="username" name="username" required />
          </div>
          <div class="form-input-container">
            <label for="password">Password:</label>
            <input type="password" id="password" name="password" required />
          </div>
          <button type="submit" class="btn btn-secondary">Log In</button>
        </form>
        <p>
          Need an account?&nbsp;
          <a href="/signup" class="register-link">Sign up!</a>
        </p>
      </div>
    </div>
    <%- include("partials/footer") %>
  </body>
</html>
