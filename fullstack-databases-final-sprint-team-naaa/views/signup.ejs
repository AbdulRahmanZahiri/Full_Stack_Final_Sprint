<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8" />
  <title>Sign Up</title>
  <link rel="stylesheet" href="/styles.css" />
</head>

<body>
  <div class="main-content">
    <div class="landing-content">
      <div class="card-header">
        <img src="/shuriken.png" alt="shuriken" class="shuriken spin-left" />
        <h1>Sign Up</h1>
        <img src="/shuriken.png" alt="shuriken" class="shuriken spin-right" />
      </div>
      <form action="/signup" method="post" style="width: 300px">
        <% if (errorMessage) { %>
          <p class="error-message">
            <%= errorMessage %>
          </p>
          <% } %>
            <div class="form-input-container">
              <label for="username">Username:</label>
              <input type="text" id="username" name="username" required />
            </div>
            <div class="form-input-container">
              <label for="password">Password:</label>
              <input type="password" id="password" name="password" required />
            </div>
            <div class="form-input-container">
              <label for="isAdmin">Admin:</label>
              <input type="checkbox" id="isAdmin" name="isAdmin" />
            </div>
            <button type="submit" class="btn btn-secondary">Sign Up</button>
      </form>
      <p>
        Already have an account?&nbsp;
        <a href="/login" class="register-link">Log in!</a>
      </p>
    </div>
  </div>
  <%- include("partials/footer") %>